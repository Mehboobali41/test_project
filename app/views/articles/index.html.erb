<h1>Article Listing</h1>

    <table>
    <thead>
    <tr>
    <th>title</th>
    <th>description</th>
    <th colspan="3">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
  <div>
    <% if article.user%>
    By: <%= link_to article.user.username, user_path(article.user) %>
    <% end %>
  </div>

      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
    <td><%= link_to 'Show', article_path(article) if current_user == article.user%></td>
    <td><%= link_to 'Edit', edit_article_path(article ) if current_user == article.user %></td>
    <td><%= link_to 'Delete',article_path(article), data: {turbo_method: :Delete, turbo_confirm:'are you sure'} if current_user == article.user%></td>
    <% end %>
     
    
  
  </tr>
</tbody>
</table>
<p>
<%= link_to 'create new article', new_article_path%>
</p>
