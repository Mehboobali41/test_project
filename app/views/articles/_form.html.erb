<div id="article_form">
    <%= form_with model: @article do |f| %>
        <% if @errors&.any? %>
            <h2>The Following errors prevented the article from being saved</h2>
            <ul>
                <% @errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        <% end %>
        <p>
        <%= f.label :title%><br/>
        <%= f.text_field :title%>
        </p>
        <p>
        <%= f.label :description%><br/>
        <%= f.text_area :description%>
        </p>
        <%= f.submit %>
    <% end %>
</div>